<p id="notice"><%= notice %></p>

<h1>Carottes</h1>

<table>
  <thead>
    <tr>
      <th>Distance</th>
      <th>Profile pic</th>
      <th>Owner name</th>
      <th>Description</th>
      <th>Price theoric</th>
      <th>Price corrected</th>
      <th>Impact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.distance %></td>
        <td><%= product.profile_pic %></td>
        <td><%= product.owner_name %></td>
        <td><%= product.description %></td>
        <td><%= product.price_theoric %></td>
        <td><%= product.price_corrected %></td>
        <td><%= product.impact %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

